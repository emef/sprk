<class name = "sprk_block" private = "1">
  Describes a block of data, where it originates on disk (descriptor)
  and the transformations that are applied to it.

  <include filename = "license.xml" />

  <constructor>
    Creates a new block

    <argument name = "block id" type = "string" />
    <argument name = "descriptor" type = "sprk_descriptor" />
    <argument name = "applied transforms" type = "zlist">
      List of applied transformation_t
    </argument>
  </constructor>

  <destructor>
  </destructor>

  <method name = "queue transform">
    Queue a transformation to be applied to this block.

    <argument name = "transform" type = "sprk_transform" />
    <return type = "nothing" />
  </method>

  <method name = "get id">
    <return type = "string" />
  </method>
</class>
